<div class="item">
    <div>Avatar Url</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input 
            ype="text" 
            name="name" 
            value='{{teacher.name}}'>
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value='{{teacher.birth}}'>
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <select name="grau" >
        <option value="Médio Completo"{% if teacher.grau == 'Médio Completo' %}
        selected
        {% endif %}>Médio Completo</option>
        <option value="Ensino Superior" {% if teacher.grau == 'Ensino Superior' %}
        selected
        {% endif %}>Ensino Superior</option>
        <option value="Mestrado" {% if teacher.grau == "Mestrado" %}
        selected
        {% endif %}>Mestrado</option>
        <option value="Doutorado" {% if teacher.grau == "Doutorado" %}
        selected
        {% endif %}>Doutorado</option>
    </select>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>
        <span><input 
            type="radio" 
            name="aula" 
            value="P"
            {% if teacher.aula == "P"%}
                checked
            {% endif %}
            >Presencial
        </span>
        <span><input 
            type="radio" 
            name="aula" 
            value="D"
            {% if teacher.aula == "D" %}
                checked
            {% endif %}>à distância
        </span>
    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input 
            type="text"
            name='services'
            placeholder='Separe os serviços prestados por vírgula.'
            value='{{teacher.services}}'>
    </div>
</div>

<button type="submit">Salvar</button>

