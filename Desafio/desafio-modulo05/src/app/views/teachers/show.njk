{% extends 'layout.njk' %}

{% block content %}
      <div class="card">
        <section class="avatar" style='background: url({{teacher.avatar_url}}) no-repeat center center / cover'>
        </section>

        <section class="details">
            <h3>Professor</h3>

            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}} anos</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.grau}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{"Presencial" if teacher.aula == "P" else "à distância"}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                {% for service in teacher.services %}
                    <span>{{service}}</span>
                {% endfor %}
            </div>

            <div class="item">
                <div>Desde</div>
                <div>27/07/2020</div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        </section>
    </div>



{% endblock content %}
