{% extends 'layout.njk' %}


{% block link %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="courses.css">
{% endblock link %}

{% block content %}
    <section class="cards">
        {% for item in items %}
        <div class="card"  id='{{item.id}}'>
            <span class="{{item.id}}">{{item.number}}</span>
            <div class="card__image-content">
                <img src="{{item.img}}" alt="Start">
            </div>
            <div class="card__content">
                <p>{{item.description}}</p>
            </div>
            <div class="card__info">
                <p>{{item.module}}</p>
                {% if item.colorb %}
                    <p class="card__price {{item.colorb}}">{{item.price}}</p>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </section>
    <script src="script.js"></script>
{% endblock content %}
