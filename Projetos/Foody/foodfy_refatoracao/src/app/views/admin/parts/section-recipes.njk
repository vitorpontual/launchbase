{% macro recipes(name, filter, classes, recipes)%}
{% if name %}
   <h1>{{name}}{% if filter %}"{{filter}}"{% endif %}</h1>
{%endif%}
<div class="cards {{classes}}">
   {% for recipe in recipes %}
      <div class="card">
	 <div>
	    <img src="{{recipe.img}}" alt="{{recipe.title}}">
	 </div>
	 <div>
	    <h1>{{recipe.title}}</h1>
	    {% if recipe.chefs_name == null %}
	       <h2>por An√¥nimo</h2>
	    {% else %}
	    <h2>por {{recipe.chefs_name}}</h2>
	    {%endif%}
	    <a class='link' href="/admin/recipes/{{recipe.id}}">Visualizar</a>
	 </div>
      </div>
   {% endfor%}
</div>
{%endmacro%}
