{% extends '../layout.njk' %}

{% block content %}

   <main>
      <div class="recipes">
         <div class="header">
            <h1>Criar Receitas</h1>
            <div class="buttons">
               <button form='form-delete' class="delete-button" type='submit'>Deletar</button>
               <button form='form-put' type='submit'>Salvar Receita</button>
            </div>
         </div>

	 <form id="form-delete" action="/admin/recipes?_method=DELETE" method='POST'>
	    <input type="hidden" name='id' value='{{recipes.id}}'>
	 </form>

	 <form id="form-put" action="/admin/recipes?_method=PUT" method='POST'>
	    <div class="recipes-fields">
	       {% include "./fields.njk" %}
	    </div>

	    <input type="hidden" name='id' value='{{recipes.id}}'>
	 </form>
      </div>
   </main>

   {% include "../script.njk" %}

   <script src="/script.js"></script>
{% endblock content %}
