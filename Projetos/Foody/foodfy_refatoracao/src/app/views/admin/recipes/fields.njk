<div class="item">
  <div>Título</div>
    <div>
      <input type="text" name="title" placeholder="Título" value="{{recipes.title}}">
    </div>
</div>

<div class="item">
   <div>Chef</div>
   <div>
      <select  name="chef_id">
	 {% for chef in chefsOption %}
	    <option value="{{chef.id}}" {% if recipes.chef_id == chef.id %} selected {% endif %}>
	       {{chef.name}}
	    </option>
	 {% endfor %}
      </select>
   </div>
</div>

<div class="item ingredients">
  <div>Ingredientes</div>

    {% if recipes.ingredients %}

      {% for ingredient in recipes.ingredients %}

        <div class="ingredient">
          <input type="text" name="ingredients[]" placeholder="Ingredientes" value="{{ingredient}}">
        </div>

      {% endfor %}
    
    {% else %}

  <div class="ingredient">
    <input type="text" name="ingredients[]" placeholder="Ingredientes" value="">
  </div>

    {% endif %}

</div>

<button type="button" class="add-button add-ingredient">Adicionar novo ingrediente</button>

<div class="item preparations">
  <div>Modo de Preparo</div>

  {% if recipes.preparation %}

    {% for preparation in recipes.preparation %}

      <div class="preparation">
        <input type="text" name="preparation[]" placeholder="Modo de Prepraro" value="{{preparation}}">
      </div>

    {% endfor %}
  
  {% else %}

  <div class="preparation">
    <input type="text" name="preparation[]" placeholder="Modo de Prepraro" value="">
  </div>

  {% endif %}

</div>

<button type="button" class="add-button add-prepare">Adicionar novo passo</button>

<div class="item">
  <div>Informações adicionais</div>

  <div class="information">
    <textarea name="information" cols="30" rows="10">{{recipes.information}}</textarea>
  </div>

</div>
