{% extends '../layout.njk' %}

{% block content %}

   <main>
      <div class="chefs">
         <form action="/admin/chefs" method='POST' enctype=>
            <section>
               <h1>Criar Chef</h1>
               <button class='add-chef-button' type='submit'>Salvar Chef</button>
            </section>

            <div class="item">
               <div>Nome do chef</div>
               <div><input 
               type="text" 
               name='name' placheholder='Digite o nome do chef' 
               value="{{chefs.name}}"></div>
            </div>

            <div class="item">
               <div id="avatar-upload">
                  <input 
                  id='avatar-input' 
                  type='file' 
                  name='file_id' 
                  single
                  accept='image/*'
                  >
                  <span>Enviar Avatar</span>
               </div>
            </div>
         </form>
      </div>
   </main>

{% endblock content %}