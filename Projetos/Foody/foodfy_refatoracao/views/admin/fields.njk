<button type="submit">Salvar Receita</button>
<div class="items">
   <div id="image">
      <div class="image">
	 <h3>Imagem da Receita</h3>
	 <input type="url" name='image' value='{{recipes.image}}'>
      </div>
   </div>
</div>

<div class="items">
   <h3>Ingredientes</h3>
   <div id="ingredients">
	 <div class="ingredients">
	    <input type="text" name="ingredients[]" value='{{recipes.ingredients}}'>
	 </div>
   </div>
   <button type="button"class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="items">
   <h3>Modo de Preparo</h3>
   <div id="preparation">
      <div class="preparation">
	 <input type="text" name="preparation[]" value='{{recipes.preparation}}' >
      </div>
   </div>
   <button type='button' class="add-preparation">Adicionar novo passo</button>
</div>

<div class="items">
   <h3>Informação</h3>
   <div id="information">
      <div class="information">
	 <textarea value='{{recipes.information}}'name="information" cols="30" rows="10"></textarea>
      </div>
   </div>
</div>
<script src="/admin/add.js"></script>
